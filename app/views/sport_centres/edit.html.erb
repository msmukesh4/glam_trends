<% @page_title = "Sport Centre" %>

<div id="page-wrapper">
	<div class="graphs">
		<h3 class="blank1">Edit sport centre <%= @sport_centre.id %></h3>
		<%= form_for(:sport_centre, :url => {:action => 'update', :id => @sport_centre.id}) do |f| %>

			<% @action = "edit" %>

		    <%= render(:partial => "form", :locals => {:f => f}) %>
		    <div class="row">
		    	<div calss="col-sm-8 col-sm-offset-2">
				    
				    <%= submit_tag("Submit", :class => "btn-primary btn") %>
				    <%= link_to("Cancel",{:controller => 'sport_centres', :action => 'index'}, :class => "btn-danger btn") %>
				</div>
			</div>
		<% end %>
	</div>
</div>