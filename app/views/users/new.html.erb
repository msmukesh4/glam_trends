<% @page_title = "New user" %>

<div id="page-wrapper">
	<div class="graphs">
		<h3 class="blank1">Create User</h3>
		<%= form_for(:user, :url => {:action => 'create', :id => @user.id}) do |f| %>

			<% @action = "new" %>

		    <%= render(:partial => "form", :locals => {:f => f}) %>
		    <div class="row">
		    	<div calss="col-sm-8 col-sm-offset-2">
				    
				    <%= submit_tag("Submit", :class => "btn-success btn") %>
				    <%= link_to("Cancel",{:controller => 'users', :action => 'index'}, :class => "btn-danger btn") %>
				</div>
			</div>
		<% end %>
	</div>
</div>