<% @page_title = "Salon" %>

<div id="page-wrapper">
	<div class="graphs">
		<h3 class="blank1">Edit sport centre <%= @salon.id %></h3>
		<%= form_for(:salon, :url => {:action => 'update', :id => @salon.id}) do |f| %>

			<% @action = "edit" %>

		    <%= render(:partial => "form", :locals => {:f => f}) %>
		    <div class="row">
		    	<div class="col-sm-8 col-sm-offset-2">
				    
				    <%= submit_tag("Submit", :class => "btn-primary btn") %>
				    <%= link_to("Cancel",{:controller => 'salons', :action => 'index'}, :class => "btn-danger btn") %>
				</div>
			</div>
			<br/><br/>
		<% end %>
	</div>
</div>