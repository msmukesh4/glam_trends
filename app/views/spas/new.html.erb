<% @page_title = "New Spa" %>

<div id="page-wrapper">
	<div class="graphs">
		<h3 class="blank1">Create new spa</h3>
		<%= form_for(:spa, :url => {:action => 'create', :id => @spa.id}) do |f| %>

			<% @action = "new" %>

		    <%= render(:partial => "form", :locals => {:f => f}) %>
		    <div class="row">
		    	<div class="col-sm-8 col-sm-offset-2">
				    
				    <%= submit_tag("Submit", :class => "btn-primary btn") %>
				    <%= link_to("Cancel",{:controller => 'spas', :action => 'index'}, :class => "btn-danger btn") %>
				</div>
			</div>
			<br/><br/>
		<% end %>
	</div>
</div>